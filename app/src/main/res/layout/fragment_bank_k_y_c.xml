<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".BankKYCFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="@color/green"
                >

            </LinearLayout>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150sp"
                android:layout_height="120sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_gravity="left"
                android:layout_marginLeft="35sp"
                android:text="Bank Details"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/User_ID"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:drawableLeft="@drawable/baseline_perm_identity_24"
                    android:hint="Z64858587"
                    android:drawablePadding="10sp"
                    android:inputType="text"
                    android:paddingLeft="15sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp">

                </EditText>
                <EditText
                    android:id="@+id/User_name"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="ARSH"
                    android:focusable="false"
                    android:drawableLeft="@drawable/baseline_perm_identity_24"
                    android:drawablePadding="10sp"
                    android:paddingRight="10sp"
                    android:paddingLeft="15sp"
                    android:inputType="text"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp" />



                <EditText
                    android:id="@+id/Pan_number"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Pan Number"
                    android:drawablePadding="10sp"
                    android:paddingLeft="15sp"
                    android:drawableRight="@drawable/baseline_remove_red_eye_24"
                    android:paddingRight="10sp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/baseline_card_membership_24"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp">

                </EditText>
                <EditText
                    android:id="@+id/IFSCcode"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="IFSC Code"
                    android:drawablePadding="10sp"
                    android:paddingLeft="15sp"
                    android:drawableRight="@drawable/baseline_remove_red_eye_24"
                    android:paddingRight="10sp"
                    android:inputType="numberPassword"
                    android:drawableLeft="@drawable/baseline_home_24"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp">

                </EditText>
                <EditText
                    android:id="@+id/BankName"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Enter Bank Name"
                    android:drawablePadding="10sp"
                    android:paddingLeft="15sp"
                    android:paddingRight="10sp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/baseline_account_balance_24"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp">

                </EditText>
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:text="Nominee Details"
                    android:textColor="@color/green"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:textSize="20sp"
                    android:gravity="left"
                    android:paddingTop="5sp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:id="@+id/AccountNumber"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Account Number"
                    android:drawablePadding="10sp"
                    android:paddingLeft="15sp"
                    android:drawableLeft="@drawable/baseline_account_balance_wallet_24"
                    android:paddingRight="10sp"
                    android:inputType="text"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp">

                </EditText>
                <EditText
                    android:id="@+id/ConfirmAccountNumber"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Confirm Account Number"
                    android:drawablePadding="10sp"
                    android:paddingLeft="15sp"
                    android:drawableLeft="@drawable/baseline_account_balance_wallet_24"
                    android:paddingRight="10sp"
                    android:inputType="text"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp">

                </EditText>

                <EditText
                    android:id="@+id/NomineeName"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Enter Nominee Name"
                    android:drawablePadding="10sp"
                    android:paddingLeft="15sp"
                    android:drawableLeft="@drawable/baseline_account_balance_wallet_24"
                    android:paddingRight="10sp"
                    android:inputType="text"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp">

                </EditText>
                <EditText
                    android:id="@+id/NomineeRelation"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Enter Nominee Relation"
                    android:drawablePadding="10sp"
                    android:paddingLeft="15sp"
                    android:drawableLeft="@drawable/baseline_account_balance_wallet_24"
                    android:paddingRight="10sp"
                    android:inputType="text"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp">

                </EditText>


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/Update"
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:text="Update"
                    android:layout_margin="30sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50sp"
                    android:textColor="#FAF7F7"
                    android:background="@drawable/btnbackground"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressbarUpdate"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>



        </LinearLayout>
    </ScrollView>


</FrameLayout>