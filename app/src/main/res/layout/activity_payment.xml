<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".payment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        android:background="@color/startColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/startColor"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/startColor"
                    android:src="@drawable/arrow_back">

                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNO PAY"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#Bachat Har Bar"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:padding="@dimen/_7sdp">
                    <TextView
                        android:id="@+id/memberName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Hello, User!"/>
                    <TextView
                        android:id="@+id/memberId"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="UP000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">



                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/shareAnimation"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:lottie_rawRes="@raw/share"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="@dimen/_100sdp"
            android:layout_margin="@dimen/_20sdp"
            android:gravity="center"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                >
                <LinearLayout
                    android:id="@+id/pay_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ebook">

                        </ImageView>

                        <TextView
                            android:id="@+id/payment_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_20sdp"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/_40sdp"
                            android:textStyle="bold"
                            android:text="Payment Type"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avaliable balance : "
                            android:paddingBottom="@dimen/_10sdp"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/avaliablebalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="190000/-"
                            android:textSize="@dimen/_14sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            >

                        </TextView>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/subtype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_20sdp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="Subtype"/>
                    <TextView
                        android:id="@+id/subtype_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_20sdp"
                        android:gravity="center"
                        android:text=""
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Amount"/>

                    <EditText
                        android:id="@+id/tpin_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:drawableRight="@drawable/baseline_remove_red_eye_24"
                        android:hint="Enter T-Pin"
                        android:maxLength="4"
                        android:inputType="numberPassword"
                        android:background="@drawable/edittextbackground"/>
                    <EditText
                        android:id="@+id/ctpin_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:maxLength="4"
                        android:drawableRight="@drawable/baseline_remove_red_eye_24"
                        android:hint="Confirm T-Pin"
                        android:inputType="numberPassword"
                        android:background="@drawable/edittextbackground"/>

                    <Button
                        android:id="@+id/pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/btnbackground"
                        android:text="PAY"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <ProgressBar
                        android:id="@+id/pay_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/btnbackground"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/success_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/unoimage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:visibility="visible"
                        android:src="@drawable/uno"/>

                    <TextView
                        android:id="@+id/paymenttype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order successful"
                        android:textColor="@color/endColor"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:gravity="center"
                        >

                    </TextView>
                    <ImageView
                        android:id="@+id/successimage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"
                        android:src="@drawable/uno_img"/>

                    <TextView
                        android:id="@+id/rechargetype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="1234567890"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="@dimen/_16sdp"/>




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount :"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/_16sdp"/>

                        <TextView
                            android:id="@+id/rechargeamount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8753"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sdp"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/transactionid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TXN4633833736"
                        android:visibility="gone"
                        android:textSize="@dimen/_13sdp"
                        android:gravity="center"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        >
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JAN 30 2025 "
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01:30:34 PM "
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cashbacklayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_margin="@dimen/_10sdp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bachat : "
                            android:textStyle="bold"
                            android:textColor="@color/startColor"
                            android:gravity="center"
                            android:textSize="@dimen/_16sdp"/>

                        <TextView
                            android:id="@+id/cashback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/endColor"
                            android:text="â‚¹1.5"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sdp"/>
                    </LinearLayout>





                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unotag Multi Solution Pvt. Ltd."
                        android:gravity="center"
                        android:textColor="@color/startColor"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14sdp">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="#Bachat Har Baar"
                        android:textStyle="bold"
                        android:textColor="@color/endColor"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>