<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChangeTpinFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_271sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_12sdp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_12sdp">

            <!-- User Image Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_39sdp"
                app:cardBackgroundColor="@color/green"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_78sdp"
                    android:layout_height="@dimen/_78sdp"
                    android:src="@drawable/baseline_person_24"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ARSH"
                android:textSize="@dimen/_23sdp"
                android:textStyle="bold"
                android:gravity="center"/>

            <EditText
                android:id="@+id/password1"
                android:layout_width="@dimen/_233sdp"
                android:layout_height="@dimen/_31sdp"
                android:background="@drawable/edittextbackground"
                android:hint="Enter 4-digit Old T-PIN"
                android:drawablePadding="@dimen/_8sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:paddingRight="@dimen/_8sdp"
                android:inputType="numberPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp">

            </EditText>
            <EditText
                android:id="@+id/password2"
                android:layout_width="@dimen/_233sdp"
                android:layout_height="@dimen/_31sdp"
                android:background="@drawable/edittextbackground"
                android:hint="Enter 4-digit New T-PIN"
                android:drawablePadding="@dimen/_8sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:paddingRight="@dimen/_8sdp"
                android:inputType="numberPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp">

            </EditText>
            <EditText
                android:id="@+id/password3"
                android:layout_width="@dimen/_233sdp"
                android:layout_height="@dimen/_31sdp"
                android:background="@drawable/edittextbackground"
                android:hint="Enter 4-digit Old Con..."
                android:drawablePadding="@dimen/_8sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:paddingRight="@dimen/_8sdp"
                android:inputType="numberPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp">

            </EditText>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/save"
                    android:layout_width="@dimen/_233sdp"
                    android:layout_height="@dimen/_39sdp"
                    android:text="Update T-PIN"
                    android:layout_margin="@dimen/_23sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_39sdp"
                    android:textColor="#FAF7F7"
                    android:background="@drawable/btnbackground"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressbarlogin"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>