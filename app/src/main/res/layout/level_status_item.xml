<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:gravity="center_vertical">

    <!-- Index Number -->
    <TextView
        android:id="@+id/index"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/edittextbackground"
        android:gravity="center"
        android:text="1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@color/msg_grey"
        android:orientation="horizontal"
        android:padding="2dp">

        <!-- Total Progress Section -->
        <LinearLayout
            android:id="@+id/total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/endColor"
            android:gravity="center">

            <TextView
                android:id="@+id/total_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- Active Progress Section -->
        <LinearLayout
            android:id="@+id/activeProgress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/accept"
            android:gravity="center">

            <TextView
                android:id="@+id/active_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- Free Progress Section -->
        <LinearLayout
            android:id="@+id/freeProgress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reject"
            android:gravity="center">

            <TextView
                android:id="@+id/free_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
