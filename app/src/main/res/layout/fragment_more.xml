<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:orientation="horizontal"
            android:padding="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_62sdp"
                    android:layout_height="@dimen/_62sdp"
                    android:src="@drawable/baseline_person_24" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@example.com"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>


        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="About Us"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_19sdp"
                            android:gravity="start"
                            android:paddingRight="@dimen/_8sdp"
                            android:drawableStart="@drawable/baseline_error_outline_24"
                            android:drawablePadding="@dimen/_12sdp"
                            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                            android:padding="@dimen/_8sdp">

                        </TextView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Company Document"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_19sdp"
                            android:gravity="start"
                            android:paddingRight="@dimen/_8sdp"
                            android:drawableStart="@drawable/baseline_file_copy_24"
                            android:drawablePadding="@dimen/_12sdp"
                            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                            android:padding="@dimen/_8sdp">

                        </TextView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gallery"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_19sdp"
                            android:gravity="start"
                            android:paddingRight="@dimen/_8sdp"
                            android:drawableStart="@drawable/baseline_photo_24"
                            android:drawablePadding="@dimen/_12sdp"
                            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                            android:padding="@dimen/_8sdp">

                        </TextView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Raise Ticket"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_19sdp"
                            android:gravity="start"
                            android:paddingRight="@dimen/_8sdp"
                            android:drawableStart="@drawable/baseline_task_24"
                            android:drawablePadding="@dimen/_12sdp"
                            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                            android:padding="@dimen/_8sdp">

                        </TextView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="About Us"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_19sdp"
                            android:gravity="start"
                            android:paddingRight="@dimen/_8sdp"
                            android:drawableStart="@drawable/baseline_insert_drive_file_24"
                            android:drawablePadding="@dimen/_12sdp"
                            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                            android:padding="@dimen/_8sdp">

                        </TextView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Terms and Conditions"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_19sdp"
                            android:gravity="start"
                            android:paddingRight="@dimen/_8sdp"
                            android:drawableStart="@drawable/baseline_error_outline_24"
                            android:drawablePadding="@dimen/_12sdp"
                            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                            android:padding="@dimen/_8sdp">

                        </TextView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Privacy Policy"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_19sdp"
                            android:gravity="start"
                            android:paddingRight="@dimen/_8sdp"
                            android:drawableStart="@drawable/baseline_privacy_tip_24"
                            android:drawablePadding="@dimen/_12sdp"
                            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                            android:padding="@dimen/_8sdp">

                        </TextView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Refund and Cancellation policy"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_19sdp"
                            android:gravity="start"
                            android:paddingRight="@dimen/_8sdp"
                            android:drawableStart="@drawable/baseline_cancel_presentation_24"
                            android:drawablePadding="@dimen/_12sdp"
                            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                            android:padding="@dimen/_8sdp">

                        </TextView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rate Us"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_19sdp"
                            android:gravity="start"
                            android:paddingRight="@dimen/_8sdp"
                            android:drawableStart="@drawable/baseline_star_24"
                            android:drawablePadding="@dimen/_12sdp"
                            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                            android:padding="@dimen/_8sdp">

                        </TextView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Account Deletion"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_19sdp"
                            android:gravity="start"
                            android:paddingRight="@dimen/_8sdp"
                            android:drawableStart="@drawable/baseline_power_settings_new_24"
                            android:drawablePadding="@dimen/_12sdp"
                            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                            android:padding="@dimen/_8sdp">
<!--                            jyy-->
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>