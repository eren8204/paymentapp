<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".ChangeLoginPasswordFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_12sdp"
        android:layout_margin="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_12sdp">

            <!-- User Image Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_39sdp"
                app:cardBackgroundColor="@color/startColor"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_78sdp"
                    android:layout_height="@dimen/_78sdp"
                    android:src="@drawable/baseline_person_24"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ARSH"
                android:textSize="@dimen/_23sdp"
                android:textStyle="bold"
                android:gravity="center"/>

            <EditText
                android:id="@+id/old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextbackground"
                android:hint="Enter Old Password"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:padding="@dimen/_10sdp"
                android:maxLength="12"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">

            </EditText>
            <EditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextbackground"
                android:hint="Enter New Password"
                android:drawablePadding="@dimen/_8sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:paddingRight="@dimen/_8sdp"
                android:maxLength="12"
                android:padding="@dimen/_10sdp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">

            </EditText>

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextbackground"
                android:hint="Confirm New Password"
                android:drawablePadding="@dimen/_8sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:paddingRight="@dimen/_8sdp"
                android:maxLength="12"
                android:padding="@dimen/_10sdp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">

            </EditText>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/update_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Password"
                    android:layout_margin="@dimen/_23sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_39sdp"
                    android:textColor="#FAF7F7"
                    android:background="@drawable/loginbtnbakground"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_30sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_15sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unotag Multi Solution Pvt. Ltd."
            android:gravity="center"
            android:textColor="@color/startColor"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="@dimen/_14sdp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="#Bachat Har Baar"
            android:textStyle="bold"
            android:textColor="@color/endColor"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>


</LinearLayout>