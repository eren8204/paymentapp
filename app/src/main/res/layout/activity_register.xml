<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/background2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:background="@color/green"
            >

        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150sp"
            android:layout_height="120sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_gravity="left"
            android:layout_marginLeft="35sp"
            android:text="Register"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/registeremail"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittextbackground"
                android:drawableLeft="@drawable/baseline_mail_24"
                android:hint="Enter Email"
                android:drawablePadding="10sp"
                android:inputType="text"
                android:paddingLeft="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp">

            </EditText>
            <EditText
                android:id="@+id/name"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittextbackground"
                android:hint="Enter Full Nameas per Docu..."
                android:focusable="false"
                android:drawableLeft="@drawable/baseline_perm_identity_24"
                android:drawablePadding="10sp"
                android:paddingRight="10sp"
                android:paddingLeft="15sp"
                android:inputType="text"
                android:layout_gravity="center"
                android:layout_marginTop="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittextbackground"
                    android:drawableLeft="@drawable/baseline_outlined_flag_24"
                    android:drawablePadding="10dp"
                    android:hint="+1"
                    android:inputType="phone"
                    android:paddingLeft="15sp"
                    android:paddingRight="10sp"
                    android:width="80sp" />


                <EditText
                    android:id="@+id/phonenumber"
                    android:layout_width="220sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:drawablePadding="10dp"
                    android:hint="Enter Mobile Number"
                    android:inputType="phone"
                    android:paddingLeft="15sp"
                    android:paddingRight="10sp"
                    android:focusable="true"/>
            </LinearLayout>

            <EditText
                android:id="@+id/password"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittextbackground"
                android:hint="Password"
                android:drawablePadding="10sp"
                android:paddingLeft="15sp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:paddingRight="10sp"
                android:inputType="numberPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_gravity="center"
                android:layout_marginTop="20sp">

            </EditText>
            <EditText
                android:id="@+id/coinfirmpassword"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittextbackground"
                android:hint="confirm  Password"
                android:drawablePadding="10sp"
                android:paddingLeft="15sp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:paddingRight="10sp"
                android:inputType="numberPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_gravity="center"
                android:layout_marginTop="20sp">

            </EditText>
            <EditText
                android:id="@+id/T_PIN"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittextbackground"
                android:hint="Enter 4 digit T-pin"
                android:drawablePadding="10sp"
                android:paddingLeft="15sp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:paddingRight="10sp"
                android:inputType="numberPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_gravity="center"
                android:layout_marginTop="20sp">

            </EditText>

            <EditText
                android:id="@+id/sponserID"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittextbackground"
                android:hint="Enter Sponser ID"
                android:drawablePadding="10sp"
                android:paddingLeft="15sp"
                android:drawableLeft="@drawable/baseline_perm_identity_24"
                android:paddingRight="10sp"
                android:inputType="text"
                android:layout_gravity="center"
                android:layout_marginTop="20sp">

            </EditText>

            <CheckBox
                android:id="@+id/checkbox_example"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:textStyle="bold"
                android:textColor="#FF1A09"
                android:textSize="15sp"
                android:text="I agree to the Terms and Condition" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/save"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:text="Register"
                android:layout_margin="30sp"
                android:layout_gravity="center"
                android:layout_marginLeft="50sp"
                android:textColor="#FAF7F7"
                android:background="@drawable/btnbackground"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressbarlogin"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_gravity="left"
                android:text="have a account? "
                android:textColor="#050505"
                android:textSize="20dp">


            </TextView>

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_gravity="right"
                android:text="Login"
                android:textColor="#FF1A09"
                android:textStyle="bold"
                android:textSize="20sp">

            </TextView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
